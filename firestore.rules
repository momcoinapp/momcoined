rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Publicly readable, only writable by the user (matched by wallet)
    match /users/{wallet} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == wallet;
    }

    // Bingo Games: Read-only for public, writeable only by Admin SDK
    match /bingo_games/{gameId} {
      allow read: if true;
      allow write: if false; // Admin SDK only
    }

    // Bingo Cards: Read-only for owner
    match /bingo_cards/{cardId} {
      allow read: if request.auth != null && resource.data.owner == request.auth.uid;
      allow write: if false; // Admin SDK only
    }
  }
}
